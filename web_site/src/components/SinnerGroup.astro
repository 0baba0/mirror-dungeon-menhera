import CharacterCard from './CharacterCard.astro';

const { name, identities } = Astro.props;

let defaultIndex = identities.findIndex((id: any) => id.data.isDefault);
if (defaultIndex === -1) defaultIndex = 0;
---

<div class="sinner-group">
  <div class="sinner-header">
    <h3>{name}</h3>
    <span class="count">ë³´ìœ  ì¸ê²©: {identities.length}</span>
  </div>

  <div class="cards-container" title="í´ë¦­í•˜ì—¬ ì¸ê²© ë³€ê²½" style="cursor: pointer;">
    {identities.map((identity: any, index: number) => (
      <div class={`card-wrapper ${index === defaultIndex ? 'active' : 'hidden'}`} data-index={index}>
        <CharacterCard character={identity} />
      </div>
    ))}
    <div class="click-hint">ğŸ”„ í´ë¦­í•˜ì—¬ ì¸ê²© ë³€ê²½</div>
  </div>

  <div class="modal-overlay hidden">
    <div class="modal-content">
      <div class="modal-header">
        <h4>{name} ì¸ê²© í¸ì„±</h4>
