        })}
      </div>
      
      <div class="no-results hidden">ê²€ìƒ‰ ê²°ê³¼ê°€ ì—†ìŠµë‹ˆë‹¤.</div>
    </div>
  </div>
</div>

<style>
  .sinner-group {
    display: flex; flex-direction: column; gap: 1rem;
    background: #1a1a1a; padding: 1.2rem;
    border-radius: 12px; border: 1px solid #333;
    box-shadow: 0 5px 15px rgba(0,0,0,0.5);
  }
  
  .sinner-header {
    display: flex; justify-content: space-between; align-items: flex-end;
    border-bottom: 2px solid #333; padding-bottom: 0.5rem;
  }
  .sinner-header h3 { margin: 0; color: #fff; font-size: 1.3rem; }
  .sinner-header .count { color: #888; font-size: 0.85rem; }

  .cards-container { position: relative; transition: 0.2s; }
  .cards-container:hover { transform: scale(1.02); }
  .cards-container:hover .click-hint { opacity: 1; }
  
  .click-hint {
    position: absolute; top: 10px; right: 10px;
    background: rgba(0,0,0,0.7); color: #eab308;
    padding: 0.4rem 0.8rem; border-radius: 20px;
    font-size: 0.8rem; font-weight: bold; opacity: 0;
    transition: 0.2s; pointer-events: none; z-index: 10;
  }

  .hidden { display: none !important; }
  .active { display: block; animation: fadeIn 0.3s ease-out; }
  @keyframes fadeIn {
    from { opacity: 0; transform: scale(0.95); }
    to { opacity: 1; transform: scale(1); }
  }

  /* --- íŒì—…(ëª¨ë‹¬) ìŠ¤íƒ€ì¼ --- */
  .modal-overlay {
    position: fixed; top: 0; left: 0; width: 100%; height: 100%;
    background: rgba(0, 0, 0, 0.85);
    display: flex; justify-content: center; align-items: center;
    z-index: 1000; backdrop-filter: blur(5px);
  }
  .modal-content {
    background: #121212; border: 2px solid #eab308; border-radius: 12px;
    width: 90%; max-width: 600px; max-height: 80vh;
    display: flex; flex-direction: column;
    box-shadow: 0 10px 40px rgba(0,0,0,0.8);
    animation: slideUp 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }
  @keyframes slideUp {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .modal-header {
    display: flex; justify-content: space-between; align-items: center;
    padding: 1.2rem; border-bottom: 1px solid #333;
  }
  .modal-header h4 { margin: 0; color: #eab308; font-size: 1.2rem; }
  .close-btn {
    background: transparent; border: none; color: #888;
    font-size: 1.2rem; cursor: pointer; transition: 0.2s;
  }
  .close-btn:hover { color: #fff; transform: scale(1.2); }

  .search-box { padding: 1rem 1.2rem; }
  .search-input {
    width: 100%; padding: 0.8rem 1rem;
    background: #222; border: 1px solid #444; color: #fff;
    border-radius: 8px; font-size: 1rem; box-sizing: border-box;
  }
  .search-input:focus { outline: none; border-color: #eab308; }

  .modal-grid {
    padding: 0 1.2rem 1.2rem 1.2rem;
    display: grid; grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
    gap: 1rem; overflow-y: auto;
  }
  
  /* íŒì—… ìŠ¤í¬ë¡¤ë°” ë””ìì¸ */
  .modal-grid::-webkit-scrollbar { width: 8px; }
  .modal-grid::-webkit-scrollbar-track { background: #1a1a1a; border-radius: 4px; }
  .modal-grid::-webkit-scrollbar-thumb { background: #444; border-radius: 4px; }
  .modal-grid::-webkit-scrollbar-thumb:hover { background: #666; }

  .modal-id-btn {
    background: #000; border: 2px solid #333; border-radius: 8px;
    padding: 0; cursor: pointer; position: relative; overflow: hidden;
    height: 120px; transition: 0.2s; display: flex; flex-direction: column;
  }
  .modal-id-btn:hover { border-color: #888; transform: translateY(-3px); }
  .modal-id-btn.selected { border-color: #eab308; box-shadow: 0 0 15px rgba(234,179,8,0.4); }
  
  .modal-id-btn img { width: 100%; height: 75%; object-fit: cover; }
  .btn-info {
    height: 25%; background: #1a1a1a; width: 100%;
    display: flex; flex-direction: column; align-items: center; justify-content: center;
  }
  .grade-badge { color: #eab308; font-size: 0.6rem; letter-spacing: 1px; }
  .id-name {
    color: #ccc; font-size: 0.7rem; white-space: nowrap;
    overflow: hidden; text-overflow: ellipsis; width: 90%;
  }

  .no-results { text-align: center; color: #888; padding: 2rem; font-size: 1.1rem; }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const groups = document.querySelectorAll('.sinner-group');
    
    groups.forEach(group => {
      const cardsContainer = group.querySelector('.cards-container');
      const modal = group.querySelector('.modal-overlay');
      const closeBtn = group.querySelector('.close-btn');
      const searchInput = group.querySelector('.search-input');
      const modalBtns = group.querySelectorAll('.modal-id-btn');
      const wrappers = group.querySelectorAll('.card-wrapper');
      const noResults = group.querySelector('.no-results');

      // 1. ëª¨ë‹¬ ì—´ê¸°
      cardsContainer.addEventListener('click', () => {
        modal.classList.remove('hidden');
        searchInput.value = ''; // ì—´ ë•Œë§ˆë‹¤ ê²€ìƒ‰ì–´ ì´ˆê¸°í™”
        searchInput.focus();
        modalBtns.forEach(btn => btn.style.display = 'flex'); // ëª¨ë“  ë²„íŠ¼ í‘œì‹œ
        noResults.classList.add('hidden');
      });

      // 2. ëª¨ë‹¬ ë‹«ê¸° (X ë²„íŠ¼ ë˜ëŠ” ë°°ê²½ í´ë¦­)
      closeBtn.addEventListener('click', () => modal.classList.add('hidden'));
      modal.addEventListener('click', (e) => {
        if(e.target === modal) modal.classList.add('hidden');
      });

      // 3. ì‹¤ì‹œê°„ ê²€ìƒ‰ í•„í„°ë§ ì—”ì§„
      searchInput.addEventListener('input', (e) => {
        const term = e.target.value.toLowerCase().trim();
        let visibleCount = 0;

        modalBtns.forEach(btn => {
          // ë²„íŠ¼ì— ì‹¬ì–´ë‘” í†µí•© ê²€ìƒ‰ ë°ì´í„°(ì¸ê²©+í‚¤ì›Œë“œ+ì†Œì†)ë¥¼ ê°€ì ¸ì™€ì„œ ë¹„êµ
          const searchData = btn.getAttribute('data-search');
          if (searchData.includes(term)) {
            btn.style.display = 'flex';
            visibleCount++;
          } else {
            btn.style.display = 'none';
          }
        });

        // ê²€ìƒ‰ ê²°ê³¼ê°€ 0ê°œë©´ ì•ˆë‚´ ë©”ì‹œì§€ í‘œì‹œ
        if(visibleCount === 0) noResults.classList.remove('hidden');
        else noResults.classList.add('hidden');
      });

      // 4. ì¸ê²© ì„ íƒ ì‹œ ì¹´ë“œ êµì²´ ë° ëª¨ë‹¬ ë‹«ê¸°
      modalBtns.forEach(btn => {
        btn.addEventListener('click', () => {
          // ê¸°ì¡´ ì¹´ë“œ ìˆ¨ê¸°ê¸°
          wrappers.forEach(w => {
            w.classList.remove('active');
            w.classList.add('hidden');
          });

          // ìƒˆ ì¹´ë“œ ë„ìš°ê¸°
          const targetIndex = btn.getAttribute('data-index');
          const targetWrapper = group.querySelector(`.card-wrapper[data-index="${targetIndex}"]`);
          if (targetWrapper) {
            targetWrapper.classList.remove('hidden');
            targetWrapper.classList.add('active');
          }

          // ì„ íƒëœ ë²„íŠ¼ ë””ìì¸ ì—…ë°ì´íŠ¸
          modalBtns.forEach(b => b.classList.remove('selected'));
          btn.classList.add('selected');

          // íŒì—… ë‹«ê¸°
          modal.classList.add('hidden');
        });
      });
    });
  });
</script>